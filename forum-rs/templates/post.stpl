<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= &self.post.post.title %> - Forum</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">PetOS Forum</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <% if let Some(ref u) = self.user { %>
                        <li class="nav-item"><a class="nav-link" href="/posts/builders">New Post</a></li>
                        <li class="nav-item"><a class="nav-link" href="/posts/leaders">Leaderboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/user">
                            <img src="<%= &u.icon_name %>" alt="Avatar" style="width: 25px; height: 25px; border-radius: 50%;" class="me-1">
                            <%= &u.name %>
                        </a></li>
                        <li class="nav-item"><a class="nav-link" href="/user/logout">Logout</a></li>
                    <% } else { %>
                        <li class="nav-item"><a class="nav-link" href="/user/login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/user/registration">Register</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><%= &self.post.post.title %></h3>
                <% if let Some(ref u) = self.user { %>
                    <% if self.post.post.author_id == u.id { %>
                        <div>
                            <a href="/user/posts/PostEditor/<%= self.post.post.id %>" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/posts/delete/<%= self.post.post.id %>" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    <% } %>
                <% } %>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <img src="<%= self.post.post.author_icon_name.as_ref().unwrap_or(&"/public/images/default_ico/default-avatar.png".to_string()) %>" 
                         alt="Avatar" style="width: 50px; height: 50px; border-radius: 50%;" class="me-3">
                    <div>
                        <strong><%= &self.post.post.author_name %></strong><br>
                        <small class="text-muted"><%= self.post.post.publication_date.format("%B %d, %Y at %H:%M").to_string() %></small>
                    </div>
                </div>
                <div class="mb-3">
                    <% for tag in &self.post.tags { %>
                        <span class="badge bg-secondary me-1"><%= &tag.name %></span>
                    <% } %>
                </div>
                <p class="card-text"><%= &self.post.post.content %></p>
                
                <!-- Post Attachments -->
                <% if !self.post_attachments.is_empty() { %>
                    <div class="row mt-3">
                        <% for attachment in &self.post_attachments { %>
                            <div class="col-md-4 mb-3">
                                <img src="<%= &attachment.attachment_name %>" class="img-fluid rounded" alt="Post attachment">
                            </div>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Comments Section -->
        <h4 class="mt-4 mb-3">Comments (<%= self.comments.len() %>)</h4>
        
        <% if !self.comments.is_empty() { %>
            <% for comment_with_attachments in &self.comments { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex align-items-start">
                                <img src="<%= comment_with_attachments.comment.author_icon_name.as_ref().unwrap_or(&"/public/images/default_ico/default-avatar.png".to_string()) %>" 
                                     alt="Avatar" style="width: 40px; height: 40px; border-radius: 50%;" class="me-3">
                                <div>
                                    <strong><%= &comment_with_attachments.comment.author_name %></strong>
                                    <small class="text-muted d-block"><%= comment_with_attachments.comment.publication_date.format("%B %d, %Y at %H:%M").to_string() %></small>
                                    <p class="mt-2"><%= &comment_with_attachments.comment.content %></p>
                                    
                                    <!-- Comment Attachments -->
                                    <% if !comment_with_attachments.attachments.is_empty() { %>
                                        <div class="row mt-2">
                                            <% for attachment in &comment_with_attachments.attachments { %>
                                                <div class="col-md-4 mb-2">
                                                    <img src="<%= &attachment.attachment_name %>" class="img-fluid rounded" alt="Comment attachment">
                                                </div>
                                            <% } %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                            <% if let Some(ref u) = self.user { %>
                                <% if comment_with_attachments.comment.author_id == u.id { %>
                                    <div>
                                        <a href="/user/posts/CommentEditor/<%= self.post.post.id %>/<%= comment_with_attachments.comment.id %>" 
                                           class="btn btn-sm btn-warning">Edit</a>
                                        <a href="/posts/delete/<%= self.post.post.id %>/comments/<%= comment_with_attachments.comment.id %>" 
                                           class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <div class="alert alert-info">No comments yet. Be the first to comment!</div>
        <% } %>

        <!-- Add Comment Form -->
        <% if self.user.is_some() { %>
            <div class="card mt-3">
                <div class="card-header">
                    <h5>Add a Comment</h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="/posts/<%= self.post.post.id %>/comments" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="content" class="form-label">Your Comment</label>
                            <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="avatar" class="form-label">Attachment (optional)</label>
                            <input type="file" class="form-control" id="avatar" name="avatar" accept="image/png, image/jpeg">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Comment</button>
                    </form>
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-warning mt-3">
                <a href="/user/login">Login</a> to add a comment.
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
