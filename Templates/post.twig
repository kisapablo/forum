{% extends 'base.twig' %}

{% block body %}
    <div class="container">
        {% if post.image_path is not null %}
        <img src="{{ asset_url(post.image_path) }}" class="img-fluid" alt="Cool Photo">
        {% endif %}
 <h1 class="mt-3 mb-3">{{ post.title|escape }}</h1>
        <div class="container mb-3 posts">
            <div class="row">
                <span class="text-muted">Kisapablo Restress | {{ post.published_date|date("F d, Y") }}</span>
            </div>
            <span>
                {{ post.content|raw }}
            </span>
        </div>
    </div>
{% endblock %}
