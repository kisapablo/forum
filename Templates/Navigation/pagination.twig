<nav aria-label="Blog pagination">
    <ul class="pagination">
        {% if pagination.current > 1 %}
        <li class="page-item">
            <a class="page-link" href="{{ url('blog/') ~ (pagination.current - 1) }}">Previous</a>
        </li>
{% endif %}
        {% for page in 1..pagination.paging %}
        <li class="page-item {% if pagination.current == page %} active {% endif %}"> {# Переход по кнопке 1 #}
            <a class="page-link" href="{{ url('blog/' ~ page) }}">{{ page }}</a> {# Переход по кнопке 1 #}
        </li> {# Переход по кнопке 1 #}
        {#        <li class="page-item"><a class="page-link" href="blog/2">2</a></li>#} {# переход на /blog/2 по кнопке 2 #}
        {#        <li class="page-item"><a class="page-link" href="blog/3">3</a></li>#} {# переход на /blog/3 по кнопке 3 #}
{% endfor %}
        {% if pagination.current < pagination.paging %}
            <li class="page-item"><a class="page-link" href="{{ url('blog/') ~ (pagination.current + 1) }}">Next</a>
            </li>
        {% endif %}
    </ul>
</nav>