<nav class="navbar fixed-top">
    {#    <div class="container-fluid"> {# Проблема связана с этим контейнером? #}
    <a class="nav-brand" href="{{ base_url() }}">
        <img class="nav-logo" src="/footer-link/mascot.png" alt="Petos mascot">
        <span class="nav-text" style="color:goldenrod">PetOS Project Forum</span>
    </a>
    <div class="nav__body-buttons">
        {% if user is null %}
        <div class="nav__body-buttons">
            <a class="nav-button auth-color" href="{{ url('user/login') }}">Log In</a>
            <a class="nav-button auth-color" href="{{ url('user/registration') }}">Register</a>
        </div>
        {% else %}
        <a href="user/report" class="submit-button nav-submit"><img src="/footer-link/bug.png" alt="bug ico"
                class="submit-img">
            <span class="">Submit Bug</span></a>
        <a class="nav-button builder-color" href="{{ url('posts/builders') }}">Public new post </a>
        <a class="nav-button leader-color" href="{{ url('posts/leaders') }}">Top Karma Leaders </a>
