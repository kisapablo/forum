{% extends 'base.twig' %}

{% block title %}
    Admin Panel
{% endblock %}
{% block body %}
    <div class="profile__body">
        <div class="profile__body-color">
            <div class="profile-text">
                {% if icons is not null %}
                    <img src="{{ icons.icon_name }}"
                         class="profile-avatar" alt="icon">
                {% endif %}

                <h5 class="profile-title">{{ user.name }}</h5>
                <a class="profile-button role-{{ cabinet.en_name }}-color"> {{ cabinet.en_name }}</a>
                {% if cabinet.moto is not null %}
                    <div class="desc">{{ cabinet.moto }}</div>
                {% endif %}

                <h3 class="profile_info-title">Account Info</h3>
                <span class="registration-date">Register on: {{ cabinet.registration_date }}</span>
                    <p class="profile_info-content">{{ cabinet.lvl|default('1000') }}
                        LVL {{ cabinet.total|default('0') }} posts<br>Last
                        Activity: {{ cabinet.last_visit_date|default('1hour ago') }}</p>
                <div> {# Первый столб #}
                    <a href="{{ url('posts?author=') ~ (user.id) }}" class="profile-button builder-color">Remove posts</a>

                    <a class="profile-button user-color" href="#">Give admin role</a>
                </div>
                <div> {# Второй столб #}
                    <a class="profile-button info-color" href="#">Update user info</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
