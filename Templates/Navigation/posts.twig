{% for post in posts %}
    <div class="post__body post__body-colors post__body-hover">
        <div class="post-title">
            <a href="{{ url('posts/' ~ post.id) }}">
                <h5 class="post-title">{{ post.title|escape }}</h5></a>
        </div>
        <div style="margin-bottom: 1.56rem">
            {{ post.author_name }}
        </div>
        <div class="post-tags">
            <a class="nav-button post-tags-color"> This Tags </a>
            <a class="nav-button post-tags-color"> Very Tags </a>
        </div>
        <div class="post-content post-content-color">
            <br>{{ post.content }}
        </div>
        <div class="post_read-more">
            <a href="{{ url('posts/' ~ post.id) }}">Read more</a>
        </div>
        <span class="post-publication-date">{{ post.publication_data|date("F d, Y, H:m ") }}</span>
    </div>
{% endfor %}