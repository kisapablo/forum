{% for post in posts %}
    <div class="row mb-2 bg-light" style="border: 1px solid #dddddd;">
        <div class="p-3">
            <div class="mt-3">
                <a href="{{ url('posts/' ~ post.id) }}"><h5 class="card-title">{{ post.title|escape }}</h5></a>
                <span class="text-muted">Kisapablo Restress | {{ post.publication_data|date("F d, Y") }}</span>
                <p class="mt-2">{{ post.content|escape }}</p>
            </div>
        </div>
    </div>
{% endfor %}