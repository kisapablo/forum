        <div class="profile__body profile__body-color">
            {% for icon in icons %}
                <img src="{{ icon.icon_name|default('/public/images/kisapablo_classic.png') }}"
                     class="avatar-full" alt="..." STYLE="width: 9rem; height: 9rem">
            {% endfor %}
            <div class="profile-text">
                <h5 class="profile-title">{# Kisapablo Restress #}{{ user.name }}</h5>
                <a class="nav-button profile-role"> {{ user.role |default('User') }}</a>
