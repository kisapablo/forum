{% extends 'base.twig' %}

{% block title %}
    Personal Cabinet
{% endblock %}
{% block body %}
    <div class="profile">
        <div class="profile-body">
            <img src="{{ user_image_path|default('/public/images/kisapablo_classic.png') }}"
                 class="avatar-full" alt="..." STYLE="width: 18rem">
            <div class="profile-text">
                <h5 class="profile-title">{# Kisapablo Restress #}{{ user.name }}</h5>
                <a class="nav-button profile-role"> {{ user.role |default('User') }}</a>
                <div class="desc" style="margin-top: 0.85rem;">Desc</div>
                <div class="profile_info">
                    <h3 class="profile_info-title">Account Info</h3>
                    <div class="registration-date">Register on:
                        <p class="profile_info-content">100000 LVL 1M posts<br>Last Activity: 1hour ago</p>
                        <a href="{{ url('user/posts/select') }}" class="nav-button builder-color">Search Your Posts</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}