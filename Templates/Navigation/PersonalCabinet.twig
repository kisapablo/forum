                        <a class="nav-button auth-color" href="{{ url('user/posts/PostEditor/' ~ post.id) }}">Edit
                            post</a>
                        <a class=" nav-button logout-color" href="{{ url('user') }}">Delete Post</a>
                    </div> #}
                    <div class="upload_user-ico">
                        <a class="nav-button info-color" href="{{ url('user/UserEditor') }}">Update user info</a>
                    </div>
                </div>
            </div>
        </div>
