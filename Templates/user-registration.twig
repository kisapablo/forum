{% extends 'base.twig' %}

{% block title %}
    Registration
{% endblock %}
{% block body %}
    <div class="container mt-5">
        {% if message %}
            <div class="alert {% if message starts with 'Ошибка' %}alert-danger{% else %}alert-success{% endif %}"
                 role="alert">
                {{ message }}
            </div>
        {% endif %}
        <div class="authentication">
            <div class="Authentication__header">
                <h3>Регистрация пользователя</h3>
            </div>
            <div class="authentication__body">
                <form method="POST" action="/user/registration">
                        <label for="login" class="form-label">Логин</label>
                        <input type="text" class="form-control" name="login" id="login" placeholder="Введите логин"
                               required>
                        <label for="password" class="form-label">Пароль</label>
                        <input type="password" class="form-control" name="password" id="password"
                               placeholder="Введите пароль" required>
                    <button type="submit" class="nav-button auth-button">Зарегистрировать</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
